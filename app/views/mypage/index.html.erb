<p id="notice"><%= notice %></p>

<h1>MyPage</h1>

<h3><%= current_user.user_name %></h3>

<table>
  <thead>
    <tr>
      <th>日時</th>
      <th>スコア</th>
      <th>曲名</th>
      <th>部位</th>
      <th>レベル</th>
      <th>ユーザー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= l score.created_at %></td>
        <td><%= score.score %></td>
        <td><%= score.beat.title %></td>
        <td><%= score.beat.training_muscle %></td>
        <td><%= score.beat.level %></td>
        <td><%= score.user_id %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
